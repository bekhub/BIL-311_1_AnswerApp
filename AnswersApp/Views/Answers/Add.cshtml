@model Answer

<form asp-action="Add" asp-controller="Answers">
    <div class="form-group">
        <input type="text" placeholder="Text" asp-for="Text" class="form-control" />
        @Html.ValidationMessageFor(x => x.Text)
    </div>
    <div class="form-group">
        <input type="submit" value="Add answer" class="btn btn-success" />
    </div>
</form>
